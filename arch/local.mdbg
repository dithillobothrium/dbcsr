CC         = gcc
CPP        =
FC         = mpif90
LD         = mpif90
AR         = ar -r
CPPFLAGS   =
DFLAGS     = -D__parallel
CFLAGS     = $(DFLAGS) -O2
FCDEBFLAGS = -ffree-form -std=f2008ts -fimplicit-none
FCFLAGS    = $(DFLAGS) -g -fno-omit-frame-pointer -O3 \
	     -funroll-loops -ffast-math -fopenmp $(FCDEBFLAGS) \
	     $(DFLAGS)
LDFLAGS    = $(FCFLAGS)
LIBS      += -L${SCALAPACK_PATH}/lib -lscalapack -lreflapack -lrefblas
